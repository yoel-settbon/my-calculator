first_term = float(input("enter a number "))
second_term = float(input("enter an other number "))
operator = input("choose an operator : '+', '-', '*' or '/' ")

def calculator():

    print(first_term, operator, second_term)

    if operator == "+":
        print(first_term + second_term)

    elif operator == "-":
        print(first_term - second_term)

    elif operator == "*":
        print(first_term * second_term)

    elif operator == "/":
        try:
            first_term / second_term
            print(first_term / second_term)
        except ZeroDivisionError:
            print("invalid operation")
            print("we can't do a division by zero")

    else:
        print("invalid operation")

calculator()